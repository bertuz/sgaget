<?xml version="1.0" encoding="UTF-8"?>
<project name="sgaget" default="all">
  
  
  <property file="sgagetp.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.android_4.0_platform" value="${jdk.home.android_4.0_platform}/../../../System/Library/Java/JavaVirtualMachines/1.6.0.jdk/Contents/Home/bin"/>
  <path id="jdk.classpath.android_4.0_platform">
    <fileset dir="${jdk.home.android_4.0_platform}">
      <include name="platforms/android-14/android.jar"/>
      <include name="platforms/android-14/data/res"/>
      <include name="tools/support/annotations.jar"/>
    </fileset>
  </path>
  
  <property name="jdk.bin.android_4.2.2_platform" value="${jdk.home.android_4.2.2_platform}/../../../System/Library/Java/JavaVirtualMachines/1.6.0.jdk/Contents/Home/bin"/>
  <path id="jdk.classpath.android_4.2.2_platform">
    <fileset dir="${jdk.home.android_4.2.2_platform}">
      <include name="platforms/android-17/android.jar"/>
      <include name="platforms/android-17/data/res"/>
      <include name="tools/support/annotations.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.android_4.2.2_platform}"/>
  <property name="project.jdk.bin" value="${jdk.bin.android_4.2.2_platform}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.android_4.2.2_platform"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.achartengine-1.1.0.classpath">
    <pathelement location="${basedir}/libs/achartengine-1.1.0.jar"/>
  </path>
  
  <path id="library.android-support-v4.classpath">
    <pathelement location="${basedir}/libs/android-support-v4.jar"/>
  </path>
  
  <path id="library.android-support-v41.classpath">
    <pathelement location="${basedir}/../abs/actionbarsherlock/libs/android-support-v4.jar"/>
  </path>
  
  <path id="library.google-play-services.classpath">
    <pathelement location="${basedir}/google-play-services-lib/libs/google-play-services.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/../abs/actionbarsherlock/module_actionbarsherlock.xml"/>
  
  <import file="${basedir}/google-play-services-lib/module_google-play-services-lib.xml"/>
  
  <import file="${basedir}/module_sgaget.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.actionbarsherlock, clean.module.google-play-services-lib, clean.module.sgaget" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.actionbarsherlock, compile.module.google-play-services-lib, compile.module.sgaget" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>