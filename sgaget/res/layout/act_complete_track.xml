<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background_repeat">
    <LinearLayout
            android:id="@+id/act_complete_track_header"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#50000000">
        <ImageButton
                    android:id="@+id/act_complete_track_btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/i1s"
                    android:background="?android:selectableItemBackground"
                    android:layout_weight="0"
                    android:visibility="visible"
                    android:onClick="goTo"/>
        <TextView
                android:id="@+id/act_complete_track_breadcrumb_description_1"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="Partenza"/>
        <ImageButton
                android:id="@+id/act_complete_track_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/i2"
                android:background="?android:selectableItemBackground"
                android:layout_weight="0"
                android:visibility="visible"
                android:onClick="goTo"/>
        <TextView
                android:id="@+id/act_complete_track_breadcrumb_description_2"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="Arrivo"/>
        <ImageButton
                android:id="@+id/act_complete_track_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/i3"
                android:background="?android:selectableItemBackground"
                android:layout_weight="0"
                android:visibility="visible"
                android:onClick="goTo"/>
        <TextView
                android:id="@+id/act_complete_track_breadcrumb_description_3"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="Trasporto"/>
        <ImageButton
                android:id="@+id/act_complete_track_btn_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/i4"
                android:background="?android:selectableItemBackground"
                android:layout_weight="0"
                android:visibility="visible"
                android:onClick="goTo"/>
        <TextView
                android:id="@+id/act_complete_track_breadcrumb_description_4"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="Giudizio"/>
        <TextView
                android:id="@+id/act_complete_track_filler"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
        <ImageButton
                android:id="@+id/act_complete_track_btn_next"
                android:layout_width="50dp"
                android:layout_gravity="right"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/i_next_white"
                android:background="?android:selectableItemBackground"
                android:layout_weight="0"
                android:onClick="next"/>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/act_complete_track_frameLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1">

    </FrameLayout>
</LinearLayout>

