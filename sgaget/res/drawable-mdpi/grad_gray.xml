<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#33b5e5"/>
            <stroke
                    android:width="5dp"
                    android:color="#7033b5e5" />
            <corners
                    android:radius="3dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                    android:width="1dp"
                    android:color="#53933f" />
            <gradient
                    android:startColor="#ffa4c739"
                    android:endColor="#FF6b8127"
                    android:angle="270" />

            <corners
                    android:radius="4dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>